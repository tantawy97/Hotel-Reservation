@using Hotel_Reservation.ViewModels
@model RegistrationViewModel


@{
    ViewData["Title"] = "Register";
    Layout = "_MyLayout";
}


  <div class="contact main-font-family text-center">
            <div class="container">
                <h2 id="contact">Get in touch</h2>
                <div class="row">
                    <div class="col-6">
                        <div class="contact-form">
                            <form asp-action="Register" asp-controller="Account">
                                <div class="form-group">
                                <input asp-for="Name" type="text" class="form-control " placeholder="Name">
                                <span asp-validation-for="Name" class="text-light help-block" ></span>

                                </div>
                                <div class="form-group">
                                <input asp-for="Email" class="form-control" type="email" placeholder="Email">
                                <span asp-validation-for="Email" class="text-light help-block" ></span>
                                </div>
                                <div class="form-group">
                                <input asp-for="PhoneNumber" class="form-control" type="text" placeholder="Phone">
                                <span asp-validation-for="PhoneNumber" class="text-light help-block" ></span>


                                </div>
                                <div class="form-group">
                                <input asp-for="NationalityId" class="form-control" type="text" placeholder="National Id">
                                <span asp-validation-for="NationalityId" class="text-light help-block" ></span>
                                </div>
                                   <div class="form-group">
                                <input asp-for="Nationality" class="form-control" type="text" placeholder="Nationality">
                                <span asp-validation-for="Nationality" class="text-light help-block" ></span>
                                </div>
                                <div class="form-group">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                                <span asp-validation-for="Password" class="text-light help-block" ></span>
                                </div>
                                <div class="form-group">
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword" class="text-light help-block" ></span>
                                </div>


                                <input type="submit" value="submit">
                            </form>
                                <div >
                                <a class="small text-light" asp-action="Login" asp-controller="Account">Are You have an account? Login</a>
                            </div>
                            <div >
                                <a class="small text-light" asp-action="index" asp-controller="Home">Back to Home Page</a>
                            </div>
                        </div>
                    </div>
                 
                    <div class="col-6">
                        <h2 class="text-right">Create Your Account</h2>
                        <img src="/imgs/shape.png">
                        
                    </div>
                </div>
            </div>
            <div></div>
        </div>
      
   @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }